{
   "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "ES2017",
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "esModuleInterop": true
   },
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}